<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      <div class="card-body">
        <h5 class="card-title">名前：<%= @user.name %></h5>
        <p class="card-text">勉強内容：<%= @user.content %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">職業：<%= @user.job %></li>
        <li class="list-group-item">地域：<%= @user.area %></li>
        <li class="list-group-item">年齢：<%= @user.age %></li>
        <li class="list-group-item"><a href="<%= user_path(@user) %>">投稿一覧</a></li>
        <% if @user == current_user %>
          <%= link_to 'プロフィール設定', edit_user_path(@user), class: 'list-group-item btn btn-outline-primary btn-block' %>
        <% end %>
      </ul>
      <%= render 'relationships/follow_button', user: @user %>
    </div>
  </aside>
    <div class="col-sm-8">
        <ul class="nav nav-tabs nav-justified mb-3">
          <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link 
            <%= 'active' if current_page?(followings_user_path(@user)) %>">フォロー<span class="badge badge-secondary">
            <%= @count_followings %></span></a>
          </li>
          <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link 
            <%= 'active' if current_page?(followers_user_path(@user)) %>">フォロワー<span class="badge badge-secondary">
            <%= @count_followers %></span></a>
          </li>
          </li>
          <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link 
            <%= 'active' if current_page?(likes_user_path(@user)) %>">お気に入り<span class="badge badge-secondary">
            <%= @count_favposts %></span></a>
          </li>
          <li class="nav-item"><a href="<%= matchings_user_path(@user) %>" class="nav-link 
            <%= 'active' if current_page?(matchings_user_path(@user)) %>">マッチング<span class="badge badge-secondary">
            <%= @count_matchings %></span></a>
          </li>
        </ul>
        <%= render 'users', users: @followings %>
    </div>
</div>